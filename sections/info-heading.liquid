<script
  type="application/json"
  data-section-type="featured-text"
  data-section-id="{{ section.id }}"
>
</script>

{% style %}
  {%
    render 'css-loop',
    css: section.settings.custom_css,
    id: section.id
  %}
{% endstyle %}

<section class="section info-heading">
  <div class="{% if section.settings.wide_display == true %} container{% else %}rich-container container{% endif %}">
    <div class="one-whole column">
      <div class="rich-text__content {{ section.settings.text_alignment }}">
        {% if section.settings.button_label != blank %}
            <a class="global-button" href="{{ section.settings.button_link }}">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        {% if section.settings.title != blank %}
          <h1 class="rich-text__heading title">
            {{ section.settings.title | escape }}
          </h1>          
        {% endif %}
        
        {% if section.settings.subtitle != blank %}
          <div class="rich-text__subheading subtitle">
            {{ section.settings.subtitle | escape }}
          </div>          
        {% endif %}

        <div class="rich-text__text {{ section.settings.text_size }}">
          {% if section.settings.content != blank %}
            {{ section.settings.content }}
          {% endif %}

          
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  {% if section.settings.section_top-spacing != blank %}
  #shopify-section-{{ section.id }} {
  margin-top:{{ section.settings.section_top-spacing }} ;
  margin-bottom:{{ section.settings.section_bottom-spacing }} ;
  }
  {% endif %}
  {% if section.settings.section_bg != blank %}
  #shopify-section-{{ section.id }} .global-button {
  background: {{ section.settings.section_bg }};
  color: {{ section.settings.button-text_color }};	
  border-color: {{ section.settings.section_bg }};   
  }
  {% endif %}
  {% if section.settings.section_heading != blank %}
  #shopify-section-{{ section.id }} .rich-text__heading {
  color: {{ section.settings.section_heading }};	 
  }
  {% endif %}
  {% if section.settings.section_subheading != blank %}
  #shopify-section-{{ section.id }} .rich-text__subheading {
  color: {{ section.settings.section_subheading }};	 
  }
  {% endif %}
  {% if section.settings.section_description != blank %}
  #shopify-section-{{ section.id }} .rich-text__text  {
  color: {{ section.settings.section_description }};	 
  }
  {% endif %}
  @media only screen and (max-width: 798px) {
  {% if section.settings.section_top-spacingm != blank %}
  #shopify-section-{{ section.id }} {
  margin-top:{{ section.settings.section_top-spacingm }} ;
  margin-bottom:{{ section.settings.section_bottom-spacingm }} ;  
  }
  {% endif %}
  }
  
</style>

{% schema %}
{
  "name": "Info Heading",
  "class": "shopify-section--rich-text-and-image",
  "settings": [
	{
      "type": "checkbox",
      "id": "wide_display",
      "label": "Wide display",
      "default": false
    },
	{
      "type": "text",
      "id": "section_top-spacing",
      "label": "Desktop Top Spacing"
    },
	{
      "type": "text",
      "id": "section_bottom-spacing",
      "label": "Desktop Bottom Spacing"
    },
	{
      "type": "text",
      "id": "section_bottom-spacingm",
      "label": "Responsive Bottom Spacing"
    },
	{
      "type": "text",
      "id": "section_top-spacingm",
      "label": "Responsive Top Spacing"
    },
	{
      "type": "color",
      "id": "section_bg",
      "label": "Button Background",
      "default": "#ffffff"		
    },
	{
      "type": "color",
      "id": "button-text_color",
      "label": "Button Text Color",
      "default": "#000000"		
    },
	{
      "type": "color",
      "id": "section_heading",
      "label": "Heading Text Color",
      "default": "#000000"		
    },
	{
      "type": "color",
      "id": "section_subheading",
      "label": "Sub Heading Text Color",
      "default": "#000000"		
    },
	{
      "type": "color",
      "id": "section_description",
      "label": "Description Text Color",
      "default": "#000000"		
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
	{
      "type": "text",
      "id": "subtitle",
      "label": "Sub Heading",
      "default": "Sub about your brand"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        {
          "value": "align_left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Info Heading",
      "category": "Text"
    }
  ],
  "templates": [
    "index",
    "product",
    "page"
  ]
}

{% endschema %}