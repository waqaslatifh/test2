{
  "name": "Featured collection",
  "class": "shopify-section--featured-collection",
  "settings": [
	{
      "type": "text",
      "id": "section_padding",
      "label": "Padding px"
    },
	{
      "type": "color",
      "id": "section_bg",
      "label": "Section Background",
      "default": "#ffffff"		
    },
	{
      "type": "color",
      "id": "section_text-color",
      "label": "Section Heading",
      "default": "#ffffff"		
    },
	{
      "type": "color",
      "id": "section_btn-bg",
      "label": "Button Background",
      "default": "#000"		
    },
	{
      "type": "color",
      "id": "section_btn-text-color",
      "label": "Button Text Color",
      "default": "#ffffff"		
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured collection"
    },
	{
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "View all"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
	{
          "type": "text",
          "id": "button_label2",
          "label": "Button label 2",
          "default": "View all"
        },
        {
          "type": "url",
          "id": "link2",
          "label": "Button link 2"
        },
